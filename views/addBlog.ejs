<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Add New Blog</title>

        <style>
            .poppins-light {
                font-family: "Poppins", serif;
                font-weight: 300;
                font-style: normal;
            }

            body {
                background-image: url('/backgrounds/pexels-scottwebb-305821.jpg');
                height: 100%;
                width: 100%;
                background-size: cover;
                /* Ensure full coverage */
                background-repeat: no-repeat;
                background-attachment: fixed;
            }
        </style>
</head>

<body class="poppins-light">
    <%- include('./partials/nav') %>

        <div class="container mt-3">

            <form action="/blog" method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label for="coverImage" class="form-label">Cover Image</label>
                    <input type="file" id="coverImage" name="coverImage" class="form-control"
                        aria-describedby="coverImage">
                </div>

                <div class="form-group mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="title" class="form-control" aria-describedby="title">
                </div>

                <div class="mb-3">
                    <label for="body" class="form-label">Body</label>
                    <textarea class="form-control" id="body" name="body" placeholder="leave a comment here"></textarea>
                </div>

                <div class="mb-3">
                    <button class="btn btn-info">Submit</button>
                </div>
            </form>
        </div>
        <%- include('./partials/scripts') %>
</body>

</html>